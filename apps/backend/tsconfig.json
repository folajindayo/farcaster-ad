      "@farcaster-ad-rental/shared": ["../../packages/shared/dist"],
      "@farcaster-ad-rental/types": ["../../packages/types/dist"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
